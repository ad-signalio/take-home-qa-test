<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Organisation</th>
      <th scope="col">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% teams.each do |team| %>
      <tr data-test-id="team_<%= team.id %>_row">
        <td><%= team.organisation.name %></td>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', [organisation, team] %></td>
        <td><%= link_to 'Edit', edit_organisation_team_path(organisation, team) %></td>
        <td><%= link_to 'Destroy', [organisation, team], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
