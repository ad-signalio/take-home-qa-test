<div class="row">
  <div class="col-12 col-lg-4 offset-lg-4">
    <%= simple_form_for([@organisation, team]) do |form| %>
      <%= form.input :name %>
      <div class="mt-5 text-center">
        <%= link_to 'Cancel', organisation_teams_path, class: 'btn btn-secondary', data: { confirm: 'Are you sure you want to quit?' } %>
        <%= form.button :submit %>
      </div>
    <% end %>
  </div>
</div>
